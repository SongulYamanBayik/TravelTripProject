@using TravelTripProject.Models.DB
@model List<Blog>
<div class="con-bot">
    @foreach (var item in Model)
    {
        if (item.ID == 1)
        {
            <div class="left">
                <div class="bot-left">
                    <img src="@item.ImageUrl" alt="" />
                </div>
                <div class="left-text">

                    <h4>@item.Title</h4>
                    <p>@item.Description.Substring(0, 90)</p>
                    <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Daha Fazla >></span></a></p>
                </div>
            </div>
        }
        else if (item.ID == 2)
        {
            <div class="left">
                <div class="bot-left">
                    <img src="@item.ImageUrl" alt="" />
                </div>
                <div class="left-text">

                    <h4>@item.Title</h4>
                    <p>@item.Description.Substring(0, 90)</p>
                    <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Daha Fazla >></span></a></p>
                </div>
            </div>
        }
        else
        {
            <div class="right">
                <div class="bot-left">
                    <img src="@item.ImageUrl" alt="" />
                </div>
                <div class="left-text">
                    <h4>@item.Title</h4>
                    <p>@item.Description.Substring(0, 90)</p>
                    <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Daha Fazla >></span></a></p>
                </div>
            </div>
            <div></div>
        }
    }


    <div class="clear"></div>
</div>
