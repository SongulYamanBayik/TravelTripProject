@using TravelTripProject.Models.Sınıflar
@model List<Blog>

<div class="padding1">
    <h4>Favorilerimiz</h4>
    <div class="box-left">
        @foreach (var item in Model)
        {
        <div class="bot-img">
            <img src="@item.ImageUrl" style="width:140px; height:80px" alt="" />
        </div>
        <div class="bot-desc">
            <p>@item.Description.Substring(0,100) </p>
        </div>
        <div class="clear"></div>
        }
       
    </div>
    @Html.Action("OurBestPlaces2","Default")
</div>
