@using TravelTripProject.Models.Sınıflar
@model List<Blog>
@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi Sayfası</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td><a href="/Admin/UpdateBlog/@item.ID">@item.Baslik</a></td>
            <td><a href="/Admin/DeleteBlog/@item.ID" class="btn btn-danger">Sil</a></td>

        </tr>
    }
</table>
<td><a href="/Admin/AddBlog/" class="btn btn-primary">Yeni Blog Ekle</a></td>

