@model TravelTripProject.Models.Sınıflar.Blog
@{
    ViewBag.Title = "AddBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<form method="post" class="form-group col-lg-11">
    <h2>Yeni Blog Ekleme Formu</h2>
    <br />
    @Html.LabelFor(x => x.Title)
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Date)
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.ImageUrl)
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Description)
    @Html.TextAreaFor(x => x.Description,15,1, new { @class = "form-control" })
    <br />
    <label>
        @Html.CheckBoxFor(x=>x.LikeStatus) Favorilere Ekle
    </label>
    <br />
    <br />

    <button class="btn btn-primary" type="submit">Kaydet</button>

</form>

