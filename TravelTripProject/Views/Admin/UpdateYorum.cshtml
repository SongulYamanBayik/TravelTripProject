@model TravelTripProject.Models.Sınıflar.Yorumlar
@{
    ViewBag.Title = "UpdateYorum";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Güncelleme Sayfası</h2>
@using (Html.BeginForm("UpdateYorum", "Admin", FormMethod.Post))
{
    <div class="col-lg-11">
        @Html.LabelFor(x => x.ID)
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
        <br />
        @Html.LabelFor(x => x.KullaniciAdi)
        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control"})
        <br />
        @Html.LabelFor(x => x.Mail)
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        <br />
        
        @Html.LabelFor(x => x.Yorum)
        @Html.TextAreaFor(x => x.Yorum, 8, 1, new { @class = "form-control" })
        <br />
        <label>
            <input type="checkbox" checked autocomplete="on"> Web'de Göster
        </label>
        <br />
        <br />

        <button class="btn btn-primary" type="submit">Kaydet</button>
    </div>
}

